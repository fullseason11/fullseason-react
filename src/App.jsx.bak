            : `radial-gradient(circle, rgba(106,73,255,${cursorGlowOpacity}) 0%, rgba(42,127,255,${cursorGlowOpacity * 0.7}) 40%, transparent 70%)`
        }}
        initial={{ opacity: 0 }}
        style={{
          x: "-50%",
          y: "-50%"
        }}
        transition={{ duration: isDragging ? 0.2 : 0.3, ease: "easeOut" }}
      />
      
